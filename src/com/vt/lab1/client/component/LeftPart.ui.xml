<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

 	<ui:style>
 		.sized {
			width: 200px;
		}
 	</ui:style>
 	
 	<g:VerticalPanel spacing="10">
		<g:Label text="Filter :" />
		<g:TextBox ui:field="filterTxt" styleName="{style.sized}" />
		<g:DecoratorPanel>
			<g:ScrollPanel height="200px">
				<g:Tree ui:field="tree" addStyleNames="{style.sized}">
				</g:Tree>
			</g:ScrollPanel>
		</g:DecoratorPanel>
	</g:VerticalPanel>
	
</ui:UiBinder> 